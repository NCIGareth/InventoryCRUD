<div class="form-group row">
    <label class="col-form-label col-sm-2" for="Title">Title</label>
    <div class="col-sm-8">
      <input autofocus class="form-control" name="Title" value="<%= model.Title %>" />
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="Brand">Brand</label>
    <div class="col-sm-7">
      <input class="form-control" name="Brand" value="<%= model.Brand %>" />
    </div>
  </div>
  
  <div class="form-group row">
    <label class="col-form-label col-sm-2" for="Description">Description</label>
    <div class="col-sm-10">
      <textarea class="form-control" cols="20" name="Description" maxlength="32000" rows="7"><%= model.Description %></textarea>
    </div>
  </div>