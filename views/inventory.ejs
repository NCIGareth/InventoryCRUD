<%- include("_header") -%>

<h1>List of inventory (<%= model.length %>)</h1>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Brand</th>
        <th>Description</th>
        <th class="d-print-none">
          <a class="btn btn-sm btn-success" href="/create">Add</a>
        </th>
      </tr>
    </thead>
    <tbody>
      <% for (const inventory of model) { %>
        <tr>
          <td><%= inventory.Title %></td>
          <td><%= inventory.Brand %></td>
          <td><%= inventory.Description %></td>
          <td class="d-print-none">
            <a class="btn btn-sm btn-warning" href="/edit/<%= inventory.ITEM_ID %>">Edit</a>
            <a class="btn btn-sm btn-danger" href="/delete/<%= inventory.ITEM_ID %>">Delete</a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("_footer") -%>